<div id="content">
	<%= link_to 'Category', vendor_categories_path %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="myhover btn-add-vendor">
				<%= link_to new_vendor_path,:class => "btn btn-xs btn-primary pull-right btn-circle"  do %>
					<i class="fa fa-plus-circle"></i>
				<% end %>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Vendor Cateogry</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% @vendors.each do |f| %>
						<tr>
							<td><%= f.name %></td>
							<td><%= f.vendor_category.name %></td>
							<td>
								<%= link_to  edit_vendor_path(f) do %>
									<button class="btn btn-primary btn-sm" ><i class="fa fa-edit"></i></button>
								<% end %>
								<%= link_to vendor_path(f), method: :delete, data: { confirm: "Are you sure?" }  do %>
									<button class="btn btn-danger btn-sm" ><i class="fa fa-trash"></i></button>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div><!-- end content -->
<% if @firstmessage == true %>
<div class='popup'>
  <svg height="50" width="600">
    <path d="M550 0 L75 200 L225 200 Z" />
  </svg>
  <div>First things first! You have to add a vendor. Click here to add your first vendor. This is important so when its time to order, you dont mix up skus from different vendors.</div>  
</div>
<% end %>

<% if @secondmessage == true %>
<div class='popup2'>
  <svg height="210" width="200" style="z-index: 100">
    <path d="M0 50 L75 200 L75 150 Z" />
  </svg>
  <div>Nice work! <br> Click Output. Now you can go here to add your first catalog!</div>  
</div>
<% end %>